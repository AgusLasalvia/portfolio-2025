---
import { onMount } from "astro/jsx-runtime";
---

<div id="tsparticles"></div>

<style>
	#tsparticles {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}
</style>

<script is:inline>
	import tsParticles from "tsparticles";

	window.addEventListener("DOMContentLoaded", async () => {
		await tsParticles.load("tsparticles", {
			fullScreen: { enable: false },
			background: { color: "transparent" },
			particles: {
				number: { value: 50 },
				color: { value: "#3b82f6" },
				shape: { type: "circle" },
				opacity: { value: 0.5 },
				size: { value: 3 },
				move: {
					enable: true,
					speed: 1.2,
					direction: "none",
					outModes: "out",
				},
				links: {
					enable: true,
					distance: 150,
					color: "#3b82f6",
					opacity: 0.4,
					width: 1,
				},
			},
			interactivity: {
				events: {
					onHover: { enable: true, mode: "repulse" },
					resize: true,
				},
				modes: {
					repulse: { distance: 100 },
				},
			},
		});
	});
</script>
